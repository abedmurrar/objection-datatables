{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier",
        "plugin:array-func/recommended",
        "plugin:security/recommended"
    ],
    "plugins": ["prettier", "security", "array-func"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": ["error"],
        "linebreak-style": "off"
    }
}
